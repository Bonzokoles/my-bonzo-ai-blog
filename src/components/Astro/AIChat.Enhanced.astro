          temperature: 0.6,
          max_tokens: 1200
        };

    console.log('üì¶ [AI Chat] Request body:', requestBody);

    const response = await fetch(endpoint, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(requestBody)
    });

    console.log('üì° [AI Chat] Response status:', response.status, response.statusText);

    if (!response.ok) {
      const errorText = await response.text();
      console.error('‚ùå [AI Chat] Response error:', errorText);
      throw new Error(`Serwer zwr√≥ci≈Ç kod ${response.status}: ${errorText}`);
    }

    const data = await response.json();
    console.log('üì• [AI Chat] Response data:', data);

    let aiContent = '';
    let isCached = false;

    if (provider === 'openai' && data?.choices?.[0]?.message?.content) {
      aiContent = data.choices[0].message.content;
      isCached = false;
      console.log('‚úÖ [AI Chat] OpenAI response extracted');
    } else if (data?.response) {
      aiContent = data.response;
      isCached = Boolean(data.cached);
      console.log('‚úÖ [AI Chat] Cloudflare response extracted', { cached: isCached });
    } else {
      console.error('‚ùå [AI Chat] Unexpected response format:', data);
    }

    if (aiContent) {
