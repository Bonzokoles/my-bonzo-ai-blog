    const endpoint = provider === 'openai' ? '/api/ai/chat-openai' : '/api/ai/chat';
    console.log(`üåê [AI Chat] Making API request to ${endpoint} (provider: ${provider})`);

    const requestBody = provider === 'openai'
      ? {
          messages: [
            ...history,
            { role: 'user', content: prompt }
          ],
          model: 'gpt-4o-mini',
          temperature: 0.7,
