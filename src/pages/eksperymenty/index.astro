  async function connectAvatar() {
    try {
      avatarStatus!.textContent = "ðŸ”„ ÅÄ…czenie...";
      avatarStatus!.className =
        "absolute top-4 left-4 px-3 py-1 bg-yellow-600 bg-opacity-80 text-white rounded-lg text-sm";

      // Create HeyGen session
